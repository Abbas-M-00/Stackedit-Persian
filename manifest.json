{
  "manifest_version": 3,
  "name": "StackEdit Persian",
  "description": "Makes StackEdit RTL and applies custom styles.",
  "version": "1.0",
  "permissions": [
    "activeTab"
  ],
  "content_scripts": [
    {
      "matches": ["https://stackedit.io/*"],
      "js": ["content.js"],
      "css": ["style.css"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "host_permissions": [
    "http://stackedit.io/*",
    "https://stackedit.io/*"
  ],
  "icons": {
    "16": "icon-16.png",
    "48": "icon-48.png",
    "128": "icon-128.png"
  }
}
